<h1>Listing products</h1>

<%= paginate @products %>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.price %></td>
    <td><%= raw product.description %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) if admin? %></td>
    <td><%= link_to 'Destroy', product, confirm: 'Are you sure?', method: :delete if admin? %></td>
  </tr>
<% end %>
</table>

<%= paginate @products %>

